{
  "description": "JSON Hyper-Schema https://apisyouwonthate.com/blog/getting-started-with-json-hyper-schema",
  "$schema": "http://json-schema.org/draft-07/hyper-schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "number"
    },
    "title": {
      "type": "string"
    },
    "urlSlug": {
      "type": "string"
    },
    "post": {
      "type": "string"
    }
  },
  "required": ["id"],
  "base": "[http://api.dashron.com/](http://api.dashron.com/)",
  "links": [
    {
      "rel": "self",
      "href": "posts/{id}",
      "templateRequired": ["id"]
    },
    {
      "rel": "self",
      "href": "/posts/{id}",
      "hrefSchema": {
        "id": {
          "$ref": "#/properties/id"
        }
      }
    }
  ]
}